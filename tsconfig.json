{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./bin",
    // "rootDir": "src",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/routes/*": ["src/routes/*"],
      "@/services/*": ["src/services/*"],
      "@/controllers/*": ["src/controllers/*"],
      "@/db/*": ["src/database/*"],
      "@/config": ["src/config/config.ts"],
      "@/loaders": ["src/loaders/index"],
    }
  },
  // "include": ["src/**/*"],
  "exclude": ["node_modules"]
}