{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./bin",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/routes/*": ["src/routes/*"],
      "@/services/*": ["src/services/*"],
      "@/controllers/*": ["src/controllers/*"],
      "@/db/*": ["src/database/*"],
      "@/types/*": ["src/types/*"],
      "@/config/*": ["src/config/*"],
      "@/loaders": ["src/loaders/index"],
      "@/utils/*": ["src/utils/*"],
      "@/middlewares/*": ["src/middlewares/*"],
      "@/swagger/*": ["src/swagger/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}